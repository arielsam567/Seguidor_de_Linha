<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_test_bluetooth">

    <Button
        android:id="@+id/conectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="8dp"
        android:text="conectar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/desconectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="reconer"
        app:layout_constraintStart_toStartOf="@+id/conectar"
        app:layout_constraintTop_toBottomOf="@+id/conectar" />

    <Button
        android:id="@+id/enviarDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="enviar dados"
        app:layout_constraintStart_toStartOf="@+id/desconectar"
        app:layout_constraintTop_toBottomOf="@+id/desconectar" />

    <EditText
        android:id="@+id/textoEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="textoEnviado"
        app:layout_constraintStart_toStartOf="@+id/enviarDados"
        app:layout_constraintTop_toBottomOf="@+id/enviarDados" />

</android.support.constraint.ConstraintLayout>